@model NewActivity
<div class = "row">
    <div class = "col-md-2 text-center" ></div>
    <div class = "col-md-8 align-text-top text-center" ><h1>Dojo Activity Center</h1></div>
    <div class = "col-md-2 align-bottom text-center" ></div>
</div>

<div class = "row">
    <div class = "col-md-8 text-center" ></div>
    <div class = "col-md-2 text-center" > <a href="/Dashboard">Dashboard</a> | <a href="/logout">Log Out</a> </div>
    <div class = "col-md-2 align-bottom text-center" ></div>
</div>
<hr>


   <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <form asp-action="NewActivity" asp-controller="Activity" method="post"> 
             <div class="mb-3">
                 <div class="form-group row">
                <span asp-validation-for="Title" class="text-danger small"></span>
                <label asp-for="Title" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                <input type="text" class="form-control form-control-sm" id="colFormLabel"  asp-for="Title" placeholder="Activity Title">
                </div>
            </div>
             </div>
            
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group row">
                        <span asp-validation-for="StartDate" class="text-danger small"></span>
                        <label asp-for="StartDate" class="col-sm-2 col-form-label "></label>
                        <div class="col-sm-10">
                        <input type="date" class="form-control form-control-sm" id="colFormLabel"  asp-for="StartDate" >
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-group row">
                        <span asp-validation-for="StartTime" class="text-danger small"></span>
                        <label asp-for="StartTime" class="col-sm-2 col-form-label "></label>
                        <div class="col-sm-10">
                        <input type="time" class="form-control form-control-sm" id="colFormLabel"  asp-for="StartTime" >
                        </div>
                    </div>
                </div>
            </div>
             <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group row">
                        <span asp-validation-for="Duration" class="text-danger small"></span>
                        <label asp-for="Duration" class="col-sm-2 col-form-label "></label>
                        <div class="col-sm-10">
                        <input type="number" class="form-control form-control-sm" id="colFormLabel"  asp-for="Duration" >
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-group row">
                        <span asp-validation-for="DurationInc" class="text-danger small"></span>
                        <label asp-for="DurationInc" class="col-sm-2 col-form-label "></label>
                        <div class="col-sm-10">
                            <select class="custom-select mr-sm-2"  asp-for="DurationInc" id="inlineFormCustomSelect">
                                <option value="hours"> hours</option>
                                <option value="minutes"> minutes</option>
                                <option value="days"> days</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-group row">
                <span asp-validation-for="Description" class="text-danger small"></span>
                <label asp-for="Description" class="col-sm-2 col-form-label "></label>
                <div class="col-sm-10">
                    <textarea  class="form-control form-control-sm" id="colFormLabel"  asp-for="Description" placeholder="Description"></textarea>
                </div>
            </div>
            
            
            <button type="submit" class="btn btn-primary btn-lg  text-right" >Create Activity</button>
            </form>
        </div>
        <div class="col-2"></div>
    </div>